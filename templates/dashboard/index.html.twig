{% extends 'base.html.twig' %}

{% block title %}Hello ApiController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>My repositories</h1>

    <div class="jumbotron">
        <h1>Welcome {{ app.user.username }}</h1>
        <img src="{{ app.user.avatar }}" alt="">
        <div class="container">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_widget(form) }}
                {{ form_rest(form) }}
                <button class="btn btn-primary">Rechercher</button>
            {{ form_end(form) }}
        </div>
    </div>

    <ul>    
        {% for repo in repositories %}
            <li>Name : {{repo.name}}</li>
            <li>Description : {{repo.description ?? 'No description'}}</li>
            <li><a href="{{ path('dashboard_show', {id:repo.id}) }}">DÃ©tails</a> || <a href="https://github.com/{{ app.user.username }}/{{repo.name}}">Voir sur github</a></li>
            <br>
        {% endfor %}
    </ul>

    <div class="pagination">
			{{ knp_pagination_render(repositories) }}
		</div>
</div>
{% endblock %}
